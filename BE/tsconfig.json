{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "noEmit": true // Do not compile the JS (or TS) files in this project on build
  },
  "compileOnSave": false,
  "exclude": [
    "src",
    "wwwroot"
  ],
  "include": [
    "file.ts"
  ]
}